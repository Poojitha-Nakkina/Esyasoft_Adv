@{
    ViewData["Title"] = "Edit Course";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Your App Name</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white text-center">
                        <h2 class="mb-0"><i class="bi bi-pencil me-2"></i>Edit Course</h2>
                    </div>
                    <div class="card-body">
                        <form id="editCourseForm">
                            <div class="mb-3">
                                <label for="courseId" class="form-label">Course ID:</label>
                                <input type="text" id="courseId" class="form-control" readonly />
                            </div>
                            <div class="mb-3">
                                <label for="courseCode" class="form-label">Course Code:</label>
                                <input type="text" id="courseCode" class="form-control" required />
                            </div>
                            <div class="mb-3">
                                <label for="courseName" class="form-label">Course Name:</label>
                                <input type="text" id="courseName" class="form-control" required />
                            </div>
                            <div class="mb-3">
                                <label for="department" class="form-label">Department:</label>
                                <input type="text" id="department" class="form-control" />
                            </div>
                            <div class="mb-3">
                                <label for="semester" class="form-label">Semester:</label>
                                <input type="number" id="semester" class="form-control" />
                            </div>
                            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                <button type="button" id="btnSave" class="btn btn-success me-md-2">
                                    <i class="bi bi-check-circle me-1"></i>Save Changes
                                </button>
                                <a href="/Course/Courses" class="btn btn-secondary">
                                    <i class="bi bi-arrow-left me-1"></i>Back to List
                                </a>
                            </div>
                        </form>
                        <p id="msg" class="mt-3 text-center"></p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
    <script>
        $(document).ready(function () {
            var courseId = @ViewBag.CourseId;
            if (!courseId) {
                $("#msg").text("Invalid course ID.").addClass("text-danger");
                return;
            }

            var token = localStorage.getItem("jwtToken");
            if (!token) {
                $("#msg").text("Please log in first!").addClass("text-danger");
                return;
            }

            // Fetch course data
            $.ajax({
                url: `https://localhost:7097/api/Course/id/${courseId}`, //https://localhost:7097/api/Course/id/7
                type: "GET",
                headers: { "Authorization": "Bearer " + token },
                success: function (data) {
                    $("#courseId").val(data.courseId);
                    $("#courseCode").val(data.courseCode);
                    $("#courseName").val(data.courseName);
                    $("#department").val(data.department);
                    $("#semester").val(data.semester);
                },
                error: function (xhr) {
                    console.error("Error fetching course:", xhr.responseText);
                    if (xhr.status === 401) {
                        $("#msg").text("Unauthorized: Please login again.").addClass("text-danger");
                    } else {
                        $("#msg").text("Error fetching course data.").addClass("text-danger");
                    }
                }
            });

            // Handle save
            $("#btnSave").click(function () {
                var updatedCourse = {
                    courseId: parseInt($("#courseId").val()),
                    courseCode: $("#courseCode").val(),
                    courseName: $("#courseName").val(),
                    department: $("#department").val(),
                    semester: parseInt($("#semester").val()) || null
                };

                $.ajax({
                    url: `https://localhost:7097/api/Course/Update/${courseId}`,
                    type: "PUT",
                    contentType: "application/json",
                    headers: { "Authorization": "Bearer " + token },
                    data: JSON.stringify(updatedCourse),
                    success: function () {
                        $("#msg").text("Course updated successfully!").removeClass("text-danger").addClass("text-success");
                        setTimeout(function () {
                            window.location.href = "/Course/Courses";
                        }, 2000);
                    },
                    error: function (xhr) {
                        console.error("Error updating course:", xhr.responseText);
                        if (xhr.status === 401) {
                            $("#msg").text("Unauthorized: Please login again.").addClass("text-danger");
                        } else {
                            $("#msg").text("Error updating course.").addClass("text-danger");
                        }
                    }
                });
            });
        });
    </script>
</body>
</html>
