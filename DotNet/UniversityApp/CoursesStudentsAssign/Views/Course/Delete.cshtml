@{
    ViewData["Title"] = "Delete Course";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Your App Name</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card shadow">
                    <div class="card-header bg-danger text-white text-center">
                        <h2 class="mb-0"><i class="bi bi-trash me-2"></i>Delete Course</h2>
                    </div>
                    <div class="card-body">
                        <p class="text-muted">Are you sure you want to delete this course? This action cannot be undone.</p>
                        <div id="courseDetails" class="mb-4">
                            <!-- Course details will be loaded here -->
                        </div>
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button type="button" id="btnDelete" class="btn btn-danger me-md-2">
                                <i class="bi bi-trash me-1"></i>Delete Course
                            </button>
                            <a href="/Course/Courses" class="btn btn-secondary">
                                <i class="bi bi-arrow-left me-1"></i>Back to List
                            </a>
                        </div>
                        <p id="msg" class="mt-3 text-center"></p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
    <script>
        $(document).ready(function () {
            var courseId = @ViewBag.CourseId; // Passed from controller

            if (!courseId) {
                $("#msg").text("Invalid course ID.").addClass("text-danger");
                return;
            }

            var token = localStorage.getItem("jwtToken");
            if (!token) {
                $("#msg").text("Please log in first!").addClass("text-danger");
                return;
            }

            // Fetch course data to display
            $.ajax({
                url: `https://localhost:7097/api/Course/id/${courseId}`,//https://localhost:7097/api/Course/id/6
                type: "GET",
                headers: { "Authorization": "Bearer " + token },
                success: function (data) {
                    var details = `
                        <div class="row">
                            <div class="col-sm-6"><strong>Course ID:</strong> ${data.courseId}</div>
                            <div class="col-sm-6"><strong>Course Code:</strong> ${data.courseCode}</div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-sm-6"><strong>Course Name:</strong> ${data.courseName}</div>
                            <div class="col-sm-6"><strong>Department:</strong> ${data.department || 'N/A'}</div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-sm-12"><strong>Semester:</strong> ${data.semester || 'N/A'}</div>
                        </div>
                    `;
                    $("#courseDetails").html(details);
                },
                error: function (xhr) {
                    console.error("Error fetching course:", xhr.responseText);
                    if (xhr.status === 401) {
                        $("#msg").text("Unauthorized: Please login again.").addClass("text-danger");
                    } else {
                        $("#msg").text("Error fetching course data.").addClass("text-danger");
                    }
                }
            });

            // Handle delete button click
            $("#btnDelete").click(function () {
                if (confirm("Are you sure you want to delete this course?")) {
                    $.ajax({
                        url: `https://localhost:7097/api/Course/DeleteCourse?id=${courseId}`, //https://localhost:7097/api/Course/DeleteCourse?id=8

                        type: "DELETE",
                        headers: { "Authorization": "Bearer " + token },
                        success: function () {
                            $("#msg").text("Course deleted successfully!").removeClass("text-danger").addClass("text-success");
                            setTimeout(function () {
                                window.location.href = "/Course/Courses";
                            }, 2000);
                        },
                        error: function (xhr) {
                            console.error("Error deleting course:", xhr.responseText);
                            if (xhr.status === 401) {
                                $("#msg").text("Unauthorized: Please login again.").addClass("text-danger");
                            } else {
                                $("#msg").text("Error deleting course.").addClass("text-danger");
                            }
                        }
                    });
                }
            });
        });
    </script>
</body>
</html>
