@{
    ViewData["Title"] = "Register - Consumer";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow p-4" style="width: 420px; border-radius: 15px;">
        <h3 class="text-center text-primary mb-4">📝 Consumer Registration</h3>

        <div class="mb-3">
            <label class="form-label fw-semibold">Username</label>
            <input type="text" id="username" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">Email</label>
            <input type="email" id="email" class="form-control" />
        </div>

        <div class="mb-4">
            <label class="form-label fw-semibold">Password</label>
            <input type="password" id="password" class="form-control" />
        </div>

        <div class="d-grid">
            <button id="btnRegister" class="btn btn-success btn-lg">Register</button>
        </div>

        <p id="msg" class="mt-3 text-center fw-bold"></p>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $("#btnRegister").click(function () {
        var newUser = {
            userName: $("#username").val(),
            email: $("#email").val(),
            password: $("#password").val()
        };

        $.ajax({
            url: "https://localhost:7285/api/Auth/register-consumer",
            type: "POST",
            contentType: "application/json",
            data: JSON.stringify(newUser),
            success: function () {
                $("#msg").text("✅ Registered successfully! Redirecting to login...").addClass("text-success");
                setTimeout(() => window.location.href = "/Auth/Login", 1500);
            },
            error: function (xhr) {
                $("#msg").text("❌ " + xhr.responseText).addClass("text-danger");
            }
        });
    });
</script>