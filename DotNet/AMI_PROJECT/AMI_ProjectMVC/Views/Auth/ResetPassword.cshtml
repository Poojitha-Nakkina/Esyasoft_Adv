@{
    ViewData["Title"] = "Reset Password";
    var token = Context.Request.Query["token"];
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow p-4" style="width: 420px; border-radius: 15px;">
        <h3 class="text-center text-primary mb-4">🔒 Reset Password</h3>

        <input type="hidden" id="token" value="@token" />

        <div class="mb-3">
            <label class="form-label fw-semibold">New Password</label>
            <input type="password" id="password" class="form-control" placeholder="Enter new password" />
        </div>

        <div class="d-grid">
            <button id="btnReset" class="btn btn-success btn-lg">Reset Password</button>
        </div>

        <p id="msg" class="mt-3 text-center fw-bold"></p>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $("#btnReset").click(function () {
        var data = {
            token: $("#token").val(),
            newPassword: $("#password").val()
        };

        $.ajax({
            url: "https://localhost:7286/api/Auth/reset-password",
            type: "POST",
            contentType: "application/json",
            data: JSON.stringify(data),
            success: function () {
                $("#msg").text("✅ Password reset successful! Redirecting...").addClass("text-success");
                setTimeout(() => window.location.href = "/Auth/Login", 1500);
            },
            error: function (xhr) {
                $("#msg").text("❌ " + xhr.responseText).addClass("text-danger");
            }
        });
    });
</script>